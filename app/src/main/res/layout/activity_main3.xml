<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:text="AQI Map"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="The below image has a heatmap. The hotter(red) area shows higher/abnormal aqi and the colder it gets the better the aqi is." />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            app:srcCompat="@drawable/heat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                tools:ignore="MissingClass">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="173dp"
                        android:layout_height="87dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="26dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="41dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="42dp"
                        android:Textsize="100sp"
                        android:text="Banana"
                        android:textAlignment="center"
                        android:textColor="#ffff"
                        android:textSize="34sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="171dp"
                        android:layout_height="90dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="190dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginBottom="34dp"
                        android:maxHeight="100dp"
                        android:src="@drawable/ic_launcher_background" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>